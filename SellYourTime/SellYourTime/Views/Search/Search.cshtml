            }
        </ul>
        <div id="myTabContent" class="tab-content">
            @if (ViewBag.SearchMethod == "content")
            {
                <div class="tab-pane fade active in" id="content">
                    <p>
                        <div id="OfferListPanel">
                            <div class="col-xs-12 row">
                                @if (ViewBag.SearchText != null)
                                {
                                <div class="col-xs-offset-1 col-xs-10">
                                    <table class="table table-striped table-hover ">
                                        <thead>
                                            <tr>
                                                <td class="col-xs-6">@Resources.Resource.Title</td>
                                                <td class="col-xs-2">@Resources.Resource.Price</td>
                                                <td class="col-xs-4">@Resources.Resource.Seller</td>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (Offer b in ViewBag.SearchText)
                                                {

                                                    Html.RenderPartial("_Preview", b);
                                                }
                                        </tbody>
                                    </table>
                                </div>
                                }
                            </div>
                        </div>
                    </p>
