@model SellYourTime.Models.Offer
@{
    ViewBag.Title = "Offer Page";
}

<div class="panel panel-success col-xs-offset-1 col-xs-10" style="padding: 0">
    <div class="panel-heading">
        <h2 class="panel-title">
            @Model.Title
        </h2>
    </div>
    <div class="panel-body">
        <div class="col-xs-12 row">
            <img src="@Model.FirstPhotoPath" style="width: 50%; height: 50%" class="col-xs-4" />
            <h3>@Model.Description</h3>
        </div>
        <div class="col-xs-12 row" style="margin-top: 20px">
            <div class="col-xs-offset-1 col-xs-3 row">
                <span class="label label-danger" style="font-size: 30px">
                    Price:
                    <span class="label label-primary">@Model.Price</span>
                </span>
            </div>
            <button type="button" class="btn btn-primary col-xs-offset-4 col-xs-4"> Buy </button>
        </div>

    </div>
</div>
